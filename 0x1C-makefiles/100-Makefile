# My advanced useful Makefile

# The compiler to be used
CC = gcc
# The .c files
SRC = main.c school.c
# The name of the executable
NAME = school
# Compiler flags: -Wall -Werror -Wextra -pedantic
CFLAGS := -Wall -Werror -Wextra -pedantic
# Object files derived from source files
OBJ = $(SRC:.c=.o)

.PHONY: all clean fclean oclean re

# Rule to build the executable based on object file dependencies
all: $(OBJ) m.h
	$(CC) $(CFLAGS) -o $@ $^

# Rule to build object files
%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

# Rule to delete all Emacs and Vim temporary files along with the executable
clean:
	-$(RM) *~ $(NAME)

# Rule to delete the object files
oclean:
	-$(RM) $(OBJ)

# Rule to delete all Emacs and Vim temporary files, the executable, and the object files
fclean: clean oclean

# Rule to force recompilation of all source files
re: fclean all
